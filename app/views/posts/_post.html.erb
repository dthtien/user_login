<div class="post">
  <div class="card">
    <%= render 'shared/user_create', record: post %>
    <div class="card-content">
      <% if logged_in? && policy(post).update? %>
        <div id="owner-link" class="right">
          <%= link_to [:edit, post], remote: true, class: 'tooltipped', data: {delay: 10, tooltip: "Edit"}  do %>
            <i class="material-icons">edit</i>
          <% end %>
           <%= link_to  post, class: 'red-text tooltipped', data: {delay: 10, tooltip: "Delete ", position: "right", confirm: "Are you sure?"}, method: :delete  do %>
            <i class="material-icons">delete</i>
          <% end %>
        </div>
      <% end %>
        <%= simple_format post.content, class: 'post-content' %>
        <%= link_to pluralize(post.comments_count, "comment"), post, class: "chip"%>
        <%= link_to pluralize(post.images_count, "image"), post, class: "chip"%>
    </div>
    <div class="card-action">
      <%= link_to "See more", post %>
    </div>
  </div>
</div>


  