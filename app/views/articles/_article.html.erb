<div class="card">
  <div class="card-content">
    <span class="card-title activator grey-text text-darken-4">
      <%= article.title %>
      <i class="material-icons right">more_vert</i>
    </span>
    <i>create by <%= article.user.full_name %></i>
    <p><%= link_to "See more", article %></p>
  </div>
  <div class="card-reveal">
    <span class="card-title grey-text text-darken-4"><%= link_to "See more", article %><i class="material-icons right">close</i></span>
      <%= article.body[0..100] %>
      <%= render 'shared/owner_link', record: article %>
  </div>
</div>